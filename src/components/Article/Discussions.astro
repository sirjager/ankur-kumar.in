---
import {site} from "@/lib/constants";
---

<script
	id="giscus-comments"
	is:inline
	src="https://giscus.app/client.js"
	data-repo={site.links.giscus}
	data-repo-id="R_kgDOL9L3-g"
	data-category="Comments"
	data-category-id="DIC_kwDOL9L3-s4CfcfO"
	data-mapping="url"
	data-strict="0"
	data-reactions-enabled="1"
	data-emit-metadata="0"
	data-input-position="top"
	data-theme="transparent_dark"
	data-lang="en"
	data-loading="lazy"
	crossorigin="anonymous"
	async></script>

<script is:inline data-astro-rerun>
	(function () {
		document
			.querySelector('script[src="https://giscus.app/client.js"]')
			?.setAttribute("data-theme", window.thememode === "dark" ? "transparent_dark" : "light");
	})();
</script>
