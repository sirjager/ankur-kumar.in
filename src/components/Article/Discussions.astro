---
import {site} from "@/lib/constants";
---

<script
	id="giscus-comments"
	is:inline
	src="https://giscus.app/client.js"
	data-repo={site.links.giscs}
	data-repo-id="R_kgDOL2huVA"
	data-category="Blog Post Comments"
	data-category-id="DIC_kwDOL2huVM4CfG8N"
	data-mapping="url"
	data-strict="0"
	data-reactions-enabled="1"
	data-emit-metadata="0"
	data-input-position="top"
	data-theme="light"
	data-lang="en"
	data-loading="lazy"
	crossorigin="anonymous"
	async></script>

<script is:inline>
	document
		.querySelector('script[src="https://giscus.app/client.js"]')
		?.setAttribute("data-theme", themeMode === "dark" ? "transparent_dark" : "light");
</script>
