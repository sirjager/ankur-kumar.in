---
interface Props {
	text: string;
	colored: string;
	description: string;
}

const {text, colored, description} = Astro.props;
---

<style>
	@media (prefers-reduced-motion: no-preference) {
		.section-heading span {
			background-size: 0% 100%;
			animation: scroll-reveal linear forwards;
			animation-timeline: view();
			@apply bg-clip-text bg-no-repeat text-base-content/20;
		}

		.section-heading h2 .nocolor {
			animation-range-start: cover 15vh;
			animation-range-end: cover 28vh;
		}
		.section-heading h2 .colored {
			animation-range-start: cover 30vh;
			animation-range-end: cover 40vh;
		}

		.section-heading p span {
			animation-range-start: cover 36.5vh;
			animation-range-end: cover 56vh;
		}

		@keyframes scroll-reveal {
			to {
				background-size: 100% 100%;
			}
		}
	}
</style>

<div class="section-heading mx-auto max-w-6xl p-4">
	<h2 class="font-title text-4xl font-bold sm:text-5xl">
		<span class="nocolor bg-gradient-to-r from-base-content to-base-content">
			{text}
		</span>
		<span class="colored bg-gradient-to-r from-primary to-accent">
			{colored}
		</span>
	</h2>
	<p class="mt-2 max-w-md sm:text-2xl">
		<span class="bg-gradient-to-r from-base-content to-base-content">
			{description}
		</span>
	</p>
</div>
