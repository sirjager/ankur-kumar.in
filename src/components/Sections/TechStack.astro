---
import {site} from "@/lib/constants";
import SectionHeading from "./SectionHeading.astro";
import ScrollList from "@/components/ScrollList.astro";
---

<section class="mt-36 space-y-8">
	<SectionHeading
		text="Tech"
		colored="Stack"
		description="Here are some of the technologies I am familiar and worked with"
	/>

	<div class="mx-auto max-w-[1366px] space-y-2 px-1">
		<ScrollList items={site.author.programming} />
		<ScrollList direction="right" items={site.author.databases} />
		<ScrollList items={site.author.technologies} />
		<ScrollList direction="right" items={site.author.frameworks} />
	</div>
</section>
