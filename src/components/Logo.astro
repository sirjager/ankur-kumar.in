---
import {Img as Picture} from "astro-imagetools/components";
import Link from "@/components/Link.astro";
---

<div class="flex w-full items-center">
	<Link
		aria-label=""
		href="/"
		class="grid w-10 min-w-10 place-items-center rounded-btn @sm:w-16 @sm:min-w-16"
	>
		<Picture
			src="/src/assets/logo.png"
			height={60}
			width={60}
			placeholder="blurred"
			alt="Ankur Logo"
		/>
	</Link>
	<Link href="/" aria-label="Go to homepage" nofocus class="rounded-btn">
		<div class="font-title @xs:text-lg @sm:text-xl @md:text-2xl @lg:text-3xl">Ankur Kumar</div>
	</Link>
</div>
