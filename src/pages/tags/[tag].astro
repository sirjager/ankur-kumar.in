---
import Root from "@/layouts/Root.astro";
import PostsGrid from "@/components/PostsGrid.astro";
import {getCollection} from "astro:content";
import {toPosts, getTags} from "@/content";

export async function getStaticPaths() {
	const posts = toPosts(await getCollection("blog"));
	const tags = getTags(posts);
	return tags.map((tag) => ({
		params: {tag},
		props: {
			posts: posts.filter((post) => post.tags.includes(tag)),
		},
	}));
}

const {tag} = Astro.params;
const {posts} = Astro.props;
---

<Root>
	<div
		class:list={[
			"mx-auto h-full max-w-6xl overflow-clip",
			"grid grid-cols-1",
			"gap-4 p-4 sm:gap-8 sm:p-8",
			"lg:grid-cols-[minmax(0,1fr),18.75rem]",
		]}
	>
		<div class="relative w-full">
			<h2>
				Tag: {tag}
			</h2>
			<PostsGrid posts={posts} />
		</div>

		<aside class="space-y-4">
			<div class="glass h-full"></div>
		</aside>
	</div>
</Root>
